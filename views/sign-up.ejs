      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div id="sendmessage">You have successfully signed up to volunteer. Thank you!</div>
          <div id="errormessage"></div>
          <form id="addvolunteer" action="/addVolunteer" method="POST" role="form" class="contactForm">
            <input type="hidden" name="shiftID" id="shiftID">
            <div class="form-group">
              <label for="email" class="col-2 col-form-label">Your Email</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="Email" data-rule="email" data-msg="Please enter a valid email" />
                <div class="validation"></div>
            </div>
              <div class="form-group">
                <label for="firstName" class="col-2 col-form-label">Name</label>
                  <input type="text" name="firstName" class="form-control" id="firstName" placeholder="First Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                  <div class="validation"></div>
              </div>
              <div class="form-group">
                  <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Last Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                  <div class="validation"></div>
              </div>
              <div class="form-group">
                <label for="orgName" class="col-2 col-form-label">Organization Name</label>
                  <input type="text" name="orgName" class="form-control" id="orgName" placeholder="Organization Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                  <div class="validation"></div>
              </div>
              <div class="form-group">
                <label for="groupVol" class="col-2 col-form-label">I am registering a group to volunteer</label>
                  <input type="checkbox" name="groupVol" id="groupVol" placeholder="Number of Volunteers" onclick="checkboxHandler()" />
                <div class="validation"></div>
              </div>
              <div class="form-group">
                <label for="numVols" class="col-2 col-form-label">Number of Volunteers</label>
                  <input type="number" name="numVols" class="form-control" id="numVols" placeholder="1" value="1" data-rule="min:1" data-msg="Please enter at least 4 chars" readonly/>
                  <div class="validation"></div>
              </div>
              <div class="text-center"><button id="volFormSubmit" type="submit" class="line-btn green">Sign Up</button></div>
          </form>
