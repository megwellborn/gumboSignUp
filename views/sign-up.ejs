  <script>
    var item1 = localStorage.getItem("shiftID");
    var item2 = localStorage.getItem("date_");
    document.getElementById("shiftID").value = item1;
    document.getElementById("date").innerHTML = item2;

    var clickedGroupVols = false;
    function checkboxHandler(){
      if(!clickedGroupVols){
        clickedGroupVols = true;
        document.getElementById("numVols").readOnly = false;
      } else {
        clickedGroupVols = false;
        document.getElementById("numVols").readOnly = true;
      }
    }
  </script>
